// 레코드

// 포지셔널 파라미터를 이용한 레코드
void main() {
  // 정확히 위치에 어떤 타입의 값이 입력될지 지정할 수 있음
  // (String, int)는 첫 번째 값은 String타입, 두 번쨰 값은 int타입임
  (String, int) minji = ("민지", 20);
  
  print(minji);
}

// 특정 순서의 레코드 값만 가져오는 방법

void main() {
  (String, int) minji = ("민지", 20);
  
  print(minji.$1);
  print(minji.$2);
  
  print(minji);
}

// 네임드 파라미터를 이용한 레코드
void main() {
  // 다른 네임드 파라미터와 마찬가지로 순서 상관X
  ({String name, int age}) minji = (name: "민지", age: 20);
  
  print(minji);
}
